<div class="container" style="margin-top: 30px;">
  <h4>Your booking with <%= @booking.animal.name %> the <%= @booking.animal.species %>:</h4>
  <p><strong>Start date:</strong> <%= @booking.start_date %></p>
  <p><strong>End date:</strong> <%= @booking.end_date %></p>
  <p><strong>Total fee:</strong> <%= @booking.total_fee %></p>
  <%= link_to "Return to my bookings", dashboard_bookings_path %>
  <br>
  <% if @booking.end_date > Date.today %>
    <%= link_to 'Edit this booking', edit_booking_path(@booking) %>
  <% end %>
  <br>
  <% if @booking.end_date > Date.today %>
    <%= link_to 'Delete this booking', booking_path(@booking), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>

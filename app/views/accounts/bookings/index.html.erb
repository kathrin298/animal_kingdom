<div class="container" style="padding-top: 30px; background-color: white;">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="future-bookings-tab" data-toggle="tab" href="#future-bookings" role="tab" aria-controls="future-bookings" aria-selected="true">Future Bookings</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="past-bookings-tab" data-toggle="tab" href="#past-bookings" role="tab" aria-controls="past-bookings" aria-selected="false">Past Bookings</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="owner-bookings-tab" data-toggle="tab" href="#owner-bookings" role="tab" aria-controls="owner-bookings" aria-selected="false">Owner Bookings</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="owner-animals-tab" data-toggle="tab" href="#owner-animals" role="tab" aria-controls="owner-animals" aria-selected="false">Owner Animals</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="add-animal-tab" data-toggle="tab" href="#add-animal" role="tab" aria-controls="add-animal" aria-selected="false">Add an animal</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="future-bookings" role="tabpanel" aria-labelledby="future-bookings-tab">
      <% @future_bookings.each do |booking| %>
        <h4>Your booking with <%= booking.animal.name %> the <%= booking.animal.species %>:</h4>
        <p><strong>Start date:</strong> <%= booking.start_date %></p>
        <p><strong>End date:</strong> <%= booking.end_date %></p>
        <p><strong>Total fee:</strong> <%= booking.total_fee %></p>
        <%= link_to 'View this booking', booking_path(booking) %>
        <br>
        <%= link_to 'Edit this booking', edit_booking_path(booking) %>
        <br>
        <%= link_to 'Delete this booking', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %>
        <hr>
      <% end %>
    </div>
    <div class="tab-pane fade" id="past-bookings" role="tabpanel" aria-labelledby="past-bookings-tab">
      <% @past_bookings.each do |booking| %>
        <p><strong>Booking for:</strong> <%= booking.user.email %></p>
        <p><strong>Booking ID#:</strong> <%= booking.id %></p>
        <p><strong>Animal name:</strong> <%= booking.animal.name %></p>
        <p><strong>Total fee:</strong> <%= booking.total_fee %></p>
        <%= link_to 'View this booking', booking_path(booking) %>
        <hr>
      <% end %>
    </div>
    <div class="tab-pane fade" id="owner-bookings" role="tabpanel" aria-labelledby="owner-bookings-tab">
      <% @owner_bookings.each do |booking| %>
        <p><strong>Booking for:</strong> <%= booking.user.email %></p>
        <p><strong>Booking ID#:</strong> <%= booking.id %></p>
        <p><strong>Animal name:</strong> <%= booking.animal.name %></p>
        <p><strong>Total fee:</strong> <%= booking.total_fee %></p>
        <%= link_to 'View this booking', booking_path(booking) %>
        <br>
        <%= link_to 'Delete this booking', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %>
        <hr>
      <% end %>
    </div>
    <div class="tab-pane fade" id="owner-animals" role="tabpanel" aria-labelledby="owner-animals-tab">
      <% @animals.each do |animal| %>
        <h4>Details for <%= animal.name %> the <%= animal.species %></h4>
        <p><strong>Age:</strong> <%= animal.age %></p>
        <p><strong>Gender:</strong> <%= animal.gender %></p>
        <p><strong>Category:</strong> <%= animal.category %></p>
        <p><strong>Place of origin:</strong> <%= animal.place_of_origin %></p>
        <%= link_to 'View this animal', animal_path(animal) %>
        <br>
        <%= link_to 'Edit this animal', edit_animal_path(animal) %>
        <br>
        <%= link_to 'Delete this animal', animal_path(animal), method: :delete, data: { confirm: 'Are you sure?' } %>
        <hr>
      <% end %>
    </div>
    <div class="tab-pane fade" id="add-animal" role="tabpanel" aria-labelledby="add-animal-tab">
      <!-- Add an animal form code goes here -->
    </div>
  </div>
</div>

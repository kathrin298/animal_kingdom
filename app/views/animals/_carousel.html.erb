<script>

  document.getElementById('controlL').addEventListener('click', (event) => {
    event.preventDefault();
    let trans = document.getElementById("content")

    document.getElementById("content").animate([
    // keyframes
      { transform: 'translateX(-1500px)' },
      { transform: 'translateX(0px)' }
    ], {
      // timing options
      duration: 1000,
      iterations: 1
    });
    trans.style.transform = 'translateX(0)'
  });

  document.getElementById('controlR').addEventListener('click', (event) => {
    event.preventDefault();
    let trans = document.getElementById("content")

    document.getElementById("content").animate([
    // keyframes
      { transform: 'translateX(0px)' },
      { transform: 'translateX(-1500px)' }
    ], {
      // timing options
      duration: 1000,
      iterations: 1
    });
    trans.style.transform = 'translateX(-1500px)'
  });
</script>



<h1>Add the details of your animal</h1>

<div class="container">
  <%= simple_form_for(@animal,  html: { class: "form-group w-50 p-5 mx-auto"}) do |f| %>
    <%= f.input :name %>
    <%= f.label :species, 'Animal Type' %>
    <%= f.input :species, as: :string, label: false %>
    <%= f.input :hourly_rate %>
    <%= f.input :place_of_origin %>
    <%= f.input :age %>
    <%= f.input :category, collection: Animal::CATEGORIES %>
    <%= f.input :gender, collection: Animal::GENDERS %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit %>
  <% end %>
</div>



